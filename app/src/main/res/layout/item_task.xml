<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/rounded_rectangle_white"
    android:padding="16dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:id="@+id/relativeLayout"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/taskSavedName"
                android:textColor="@color/titles"
                android:layout_alignParentStart="true"
                android:textSize="20dp"
                android:layout_toStartOf="@+id/daysLeft"
                android:text="Title of Task"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/taskSavedName"
                android:layout_marginRight="10dp"
                android:text="Start"
                android:textColor="@color/text_bottom"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/startSaved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/start"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/taskSavedName"
                android:text="Start"
                android:textColor="@color/links"
                android:textSize="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/deadline"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/taskSavedName"
                android:layout_toEndOf="@+id/startSaved"
                android:layout_marginTop="10dp"
                android:textColor="@color/text_bottom"
                android:text="Deadline"
                android:textStyle="bold"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/deadlineSaved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deadline"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/taskSavedName"
                android:layout_toEndOf="@+id/deadline"
                android:textColor="@color/links"
                android:textSize="15dp"/>

           <!-- <TextView
