<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_rectangle_white"
    android:padding="15dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="30dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titleTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/titles"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:text="Title of Task"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/titleTask"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:text="Start"
                android:textColor="@color/text_bottom"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/startDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/start"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/titleTask"
                android:text="Start"
                android:textColor="@color/links"
                android:textSize="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/deadline"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/titleTask"
                android:layout_toEndOf="@+id/startDate"
                android:layout_marginTop="10dp"
                android:textColor="@color/text_bottom"
                android:text="Deadline"
                android:textStyle="bold"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/endDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deadline"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/titleTask"
                android:layout_toEndOf="@+id/deadline"
                android:textColor="@color/links"
                android:textSize="15dp"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/expandableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ProgressBar
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/progress_circular"
                android:layout_marginBottom="20dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progress_circular"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Difficulty"
                android:textColor="@color/text_bottom"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/difficultyNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progress_circular"
                android:layout_toEndOf="@+id/difficulty"
                android:text="#"
                android:textColor="@color/links"
                android:textSize="15dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/progress_circular">

                <TextView
                    android:id="@+id/pages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Pages"
                    android:textColor="@color/text_bottom"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/numberPages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/pages"
                    android:text="#"
                    android:textColor="@color/links"
                    android:textSize="15dp"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progress_circular"
                android:layout_marginRight="10dp"
                android:layout_toStartOf="@+id/numberSub"
                android:text="Sub Task"
                android:textColor="@color/text_bottom"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/numberSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progress_circular"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:text="#"
                android:textColor="@color/links"
                android:textSize="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/estimated"
                android:layout_below="@+id/difficulty"
                android:text="Estimated Duration"
                android:textColor="@color/text_bottom"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/difficulty"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/estimated"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/timeInMinutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/links"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" min "
                android:textColor="@color/links"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/ "
                android:textColor="@color/links"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/timeInHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/links"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" hrs "
                android:textColor="@color/links"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/ "
                android:textColor="@color/links"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/timeInDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/links"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" days "
                android:textColor="@color/links"
                android:layout_marginRight="10dp"
                android:textSize="15dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/subtasktitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Sub Tasks"
                android:textSize="15dp"
                android:textColor="@color/text_bottom"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:layout_below="@+id/estimated"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/subTaskRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subtasktitle"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:nestedScrollingEnabled="true"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/subTaskAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subTaskRecycler"
                android:padding="20dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="@color/buttons"
                android:src="@drawable/ic_add"
                app:backgroundTint="@color/links"
                app:fabSize="mini"
                app:maxImageSize="20dp" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>