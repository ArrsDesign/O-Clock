<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="30dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_layout"
        android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/expandableLayout">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="16dp"
                            tools:srcCompat="@drawable/ic_baseline_category_24" />


                        <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category:"
                        android:padding="16dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/titles"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/category"
                        android:text="Category"
                        android:padding="16dp"
                        android:textSize="15dp"
                        android:textColor="@color/text_bottom"
                        />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="16dp"
                            tools:srcCompat="@drawable/ic_outline_date_range_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deadline:"
                            android:padding="16dp"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textColor="@color/titles"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/deadline"
                            android:text="Deadline"
                            android:padding="16dp"
                            android:textSize="15dp"
                            android:textColor="@color/text_bottom"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="16dp"
                            tools:srcCompat="@drawable/ic_baseline_trending_up_24" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Days Left:"
                            android:padding="16dp"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textColor="@color/titles"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/daysLeft"
                            android:text="Days Left"
                            android:padding="16dp"
                            android:textSize="15dp"
                            android:textColor="@color/text_bottom"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="16dp"
                            tools:srcCompat="@drawable/ic_baseline_access_alarm_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reminder Times:"
                            android:padding="16dp"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textColor="@color/titles"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/reminder"
                            android:text="Reminder Times"
                            android:padding="16dp"
                            android:textSize="15dp"
                            android:textColor="@color/text_bottom"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="16dp"
                            tools:srcCompat="@drawable/ic_outline_date_range_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Difficulty:"
                            android:padding="16dp"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textColor="@color/titles"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/difficultySave"
                            android:text="Difficulty"
                            android:padding="16dp"
                            android:textSize="15dp"
                            android:textColor="@color/text_bottom"
                            />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Sub Tasks"
                        android:background="@drawable/rounded_rectangle"
                        android:textStyle="bold"
                        android:textColor="@color/titles"
                        android:textSize="15dp"
                        android:padding="16dp"/>


                    <ListView
                        android:id="@+id/subtaskSave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/difficultySave" />

                </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>