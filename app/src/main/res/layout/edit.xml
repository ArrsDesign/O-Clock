<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/buttons"
        android:gravity="center"
        android:padding="10dp"
        android:text="Update Task"
        android:textAllCaps="true"
        android:textColor="@color/text_bottom"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/taskEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Task Name"
            android:textColor="@color/text_bottom"
            android:textColorHint="@color/links"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginTop="50dp"/>

        <!--Sub task Selection-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="START"
                android:textColor="@color/titles"
                android:textSize="15dp"/>

            <EditText
                android:id="@+id/startEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="MM/DD/YYYY"
                android:layout_alignParentEnd="true"
                android:textColor="@color/text_bottom"
                android:textColorHint="@color/links"
                android:textSize="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginRight="10dp"
                android:text="END"
                android:textColor="@color/titles"
                android:textSize="15dp"/>

            <EditText
                android:id="@+id/endEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="MM/DD/YYYY"
                android:layout_alignParentEnd="true"
                android:textColor="@color/text_bottom"
                android:textColorHint="@color/links"
                android:textSize="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/difficultyTitle"
                android:layout_marginRight="10dp"
                android:text="DIFFICULTY"
                android:layout_alignParentStart="true"
                android:textColor="@color/titles"
                android:textSize="15dp"/>

            <!--Difficulty Selection-->

            <EditText
                android:id="@+id/difficultyEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_alignParentEnd="true"
                android:hint="0/10"
                android:layout_marginLeft="10dp"
                android:textColor="@color/text_bottom"
                android:textSize="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="PAGES"
                android:layout_centerVertical="true"
                android:textColor="@color/titles"
                android:textSize="15dp"/>

            <!--Difficulty Selection-->

            <EditText
                android:id="@+id/pagesEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:hint="# of Sub Tasks"
                android:textColor="@color/text_bottom"
                android:textSize="15dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="SUB TASKS"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:textColor="@color/titles"
                android:textSize="15dp"/>

            <!--Difficulty Selection-->

            <EditText
                android:id="@+id/subTaskEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:hint="# of Sub Tasks"
                android:textColor="@color/text_bottom"
                android:textSize="15dp"/>

        </RelativeLayout>


